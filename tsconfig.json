{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/layouts/*": [
        "src/layouts/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/stores/*": [
        "src/stores/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "*.js",
    "*.jsx",
    "*.ts",
    "*.tsx",
  ]
}